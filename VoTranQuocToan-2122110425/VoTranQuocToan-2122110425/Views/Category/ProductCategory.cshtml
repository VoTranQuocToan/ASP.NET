@model List<VoTranQuocToan_2122110425.Context.Product>
@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Views/Shared/_LayOut.cshtml";
}

<!-- ========================= PHẦN NỘI DUNG ========================= -->
<section class="section-content padding-y">
    <div class="container">

        <!-- ============================ BỘ LỌC TRÊN CÙNG ================================= -->
        <div class="card mb-3">
            <div class="card-body">
                <ol class="breadcrumb float-left">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="#">Tên danh mục</a></li>
                    <li class="breadcrumb-item active">Chi tiết sản phẩm</li>
                </ol>
            </div> <!-- card-body .// -->
        </div> <!-- card.// -->
        <!-- ============================ KẾT THÚC BỘ LỌC TRÊN CÙNG ================================= -->

        <div class="row">
            <aside class="col-md-2">
                <article class="filter-group">
                    <h6 class="title">
                        <a href="#" class="dropdown-toggle" data-toggle="collapse" data-target="#collapse_1"> Loại sản phẩm </a>
                    </h6>
                    <div class="filter-content collapse show" id="collapse_1">
                        <div class="inner">
                            <ul class="list-menu">
                                <li><a href="#">Mấy tính bảng</a></li>
                                <li><a href="#">Đồng hồ thông minh</a></li>
                                <li><a href="#">Ipad</a></li>
                                <li><a href="#">Airpod</a></li>
                            </ul>
                        </div> <!-- inner.// -->
                    </div>
                </article> <!-- filter-group  .// -->
                <article class="filter-group">
                    <h6 class="title">
                        <a href="#" class="dropdown-toggle" data-toggle="collapse" data-target="#collapse_2"> Thương hiệu </a>
                    </h6>
                    <div class="filter-content collapse show" id="collapse_2">
                        <div class="inner">
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" checked="" class="custom-control-input">
                                <div class="custom-control-label">
                                    SamSung
                                    <b class="badge badge-pill badge-light float-right">120</b>
                                </div>
                            </label>
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" checked="" class="custom-control-input">
                                <div class="custom-control-label">
                                    iPhone
                                    <b class="badge badge-pill badge-light float-right">15</b>
                                </div>
                            </label>
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" checked="" class="custom-control-input">
                                <div class="custom-control-label">
                                    Xiaomi
                                    <b class="badge badge-pill badge-light float-right">35</b>
                                </div>
                            </label>
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" checked="" class="custom-control-input">
                                <div class="custom-control-label">
                                    Oppo
                                    <b class="badge badge-pill badge-light float-right">89</b>
                                </div>
                            </label>
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input">
                                <div class="custom-control-label">
                                    Huawei
                                    <b class="badge badge-pill badge-light float-right">30</b>
                                </div>
                            </label>
                        </div> <!-- inner.// -->
                    </div>
                </article> <!-- filter-group .// -->
                <!-- Các nhóm lọc khác tương tự -->
            </aside> <!-- col.// -->

            <main class="col-md-10">
                <header class="mb-3">
                    <div class="form-inline">
                        <strong class="mr-md-auto">32 sản phẩm được tìm thấy </strong>
                        <select class="mr-2 form-control">
                            <option>Sản phẩm mới nhất</option>
                            <option>Xu hướng</option>
                            <option>Phổ biến nhất</option>
                            <option>Giá rẻ nhất</option>
                        </select>
                        <div class="btn-group">
                            <a href="page-listing-grid.html" class="btn btn-light" data-toggle="tooltip" title="Dạng danh sách">
                                <i class="fa fa-bars"></i>
                            </a>
                            <a href="page-listing-large.html" class="btn btn-light active" data-toggle="tooltip" title="Dạng lưới">
                                <i class="fa fa-th"></i>
                            </a>
                        </div>
                    </div>
                </header>

                @foreach (var item in Model)
                {
                    <article class="card card-product-list">
                        <div class="row no-gutters">
                            <aside class="col-md-3">
                                <a href="#" class="img-wrap">
                                    <span class="badge badge-danger"> MỚI </span>
                                    <img src="~/Content/images/items/@item.Avatar">
                                </a>
                            </aside>
                            <div class="col-md-6">
                                <div class="info-main">
                                    <a href="@Url.Action("index","product", new {Id=item.Id})" class="h5 title"> @item.Name</a>
                                    <div class="rating-wrap mb-2">
                                        <ul class="rating-stars">
                                            <li style="width:100%" class="stars-active">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                            <li>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                        </ul>
                                        <div class="label-rating">9/10</div>
                                    </div>
                                    <p>@item.ShortDes</p>
                                </div>
                            </div>
                            <aside class="col-sm-3">
                                <div class="info-aside">
                                    <div class="price-wrap">
                                        <span class="h5 price">@item.Price</span>
                                        <small class="text-muted">/mỗi sản phẩm</small>
                                    </div>
                                    <p class="mt-3">
                                        <a href="#" class="btn btn-outline-primary">
                                            <i class="fa fa-envelope"></i> Liên hệ nhà cung cấp
                                        </a>
                                        <a href="#" class="btn btn-light">
                                            <i class="fa fa-heart"></i> Lưu
                                        </a>
                                    </p>
                                </div>
                            </aside>
                        </div>
                    </article>
                }
            </main>
        </div>
    </div>
</section>
